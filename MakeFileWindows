# Compilador e flags
CC = gcc
CFLAGS = -Wall -std=c99 -Iraylib-5.5_win64_mingw-w64/raylib-5.5_win64_mingw-w64/include
LDFLAGS = -Lraylib-5.5_win64_mingw-w64/raylib-5.5_win64_mingw-w64/lib -lraylib -lopengl32 -lgdi32 -lwinmm -mconsole

# Arquivos-fonte e destino
SRC = src/game.c src/linked_list.c src/car.c src/camera.c
OUT = game.exe

# Alvo padrão
all: $(OUT)

# Como gerar o executável
$(OUT): $(SRC)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

# Limpeza
clean:
	del /Q $(OUT)
