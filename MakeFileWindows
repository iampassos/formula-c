# Compilador e flags
CC = gcc
CFLAGS = -Wall -std=c99 -Iraylib-5.5_win64_mingw-w64/include -Isrc/libs
LDFLAGS = -Lraylib-5.5_win64_mingw-w64/lib -lraylib -lopengl32 -lgdi32 -lwinmm -mconsole

# Arquivos-fonte e destino
SRC = $(wildcard src/libs/*.c) $(wildcard src/*.c)
OUT = game.exe

# Alvo padrão
all: $(OUT)

# Como gerar o executável
$(OUT): $(SRC)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

# Limpeza
clean:
	del /Q $(OUT)

# mingw32-make -f MakeFileWindows && game.exe
